<!DOCTYPE html>

  <html>
    <head>
      <title>Cs3300</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <div class="navbar navbar-expand-sm bg-dark">
        <% if user_signed_in? %>
          <ul class="btn-group navbar-nav">
            <li class="btn btn-info">
              <a class="text-white" <%= link_to "Home", projects_path %></a>
            </li>
            <li class="btn btn-info"> 
              <a class="text-white" <%= link_to 'Edit profile', edit_user_registration_path %></a>
            </li>
            <li class="btn btn-info">
              <a class="text-white" <%= link_to "Logout", destroy_user_session_path, method: :delete %></a>
            </li>
          </ul>
          <span class="navbar-text" style="padding-left:20px"><strong style="color:white"><%= current_user.email %></strong>.</span>

        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link bg-light" <%= link_to "Home", projects_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link bg-light" <%= link_to "Sign up", new_user_registration_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link bg-light"<%= link_to "Login", new_user_session_path %></a>
            </li>
          </ul>
        <% end %>
      </div>

      <%= yield %>
    </body>
  </html>
