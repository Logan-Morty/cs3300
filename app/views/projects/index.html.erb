<p id="notice"><%= notice %></p>

<div class="text-center">
<%= image_tag "projects.png", style: "height:20vw;margin-bottom:20px" %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr class="text-center">
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td>
          <a class="btn btn-primary text-white" <%= link_to 'Show', project %>
        </td>
        <td>
          <a class="btn btn-primary text-white" <%= link_to 'Edit', edit_project_path(project) %>
        </td>
        <td>
          <a class="btn btn-primary text-white" <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="container" style="padding-bottom:50px"><a href="projects/new" class="btn btn-success text-white">New Project</a></span>
